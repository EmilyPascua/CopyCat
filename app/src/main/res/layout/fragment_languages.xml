<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLanguageFragment"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/languagequestion"
        android:textSize="28sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="20sp"/>

    <EditText
        android:id="@+id/searchtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/searchlanguage"
        android:padding="10dp" />

    <ListView
        android:id="@+id/languagelist"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:layout_marginTop="20sp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/lang_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/language_submit" />

        <Button
            android:id="@+id/lang_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/language_return" />
    </LinearLayout>

</LinearLayout>