<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.copycat.InfoActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/grey2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:contentDescription="@stringimg"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/transparentcirclelogo"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/infoHeader"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:paddingLeft="14dp"
            android:paddingTop="90dp"
            android:text="CopyCat"
            android:textAllCaps="true"
            android:textColor="@color/fontGrey"
            android:textSize="35sp" />

    </GridLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="469dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.843">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="12dp"
                android:text="About The Devs"
                android:textSize="27sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="265dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="28dp"
                android:text="4 Computer Science Majors in Jose's CS3337 Software Enginnering class creating an Application in hope of an A in the class." />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="16dp"
                android:text="Patch Version 1.0.12"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:text="How To"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="16dp"
                android:text="More Info"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="280dp"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/transTitle"
                android:layout_below="@+id/textView8"
                android:autoLink="web"
                android:text="cs3.calstatela.edu:8080/cs3220stu55/CopyCat.html" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView7"
                android:text="• Launch the Application \n• Select a Username \n• Select Language you wish to read in \n• To change language after login simply go to account settings\n• Start Chatting!" />

            <TextView
                android:id="@+id/genTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView6"
                android:text="General Updates"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/transTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/genTitle"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="13dp"
                android:text="Translation Updates"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/genTitle"
                android:layout_marginEnd="19dp"
                android:text="• Changed Logo \n• Added Language selection list in login screen \n• Added age verification button" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/transTitle"
                android:text='• Added asynchronous translation  to free UI thread of task (fixes "CopyCat is not responding..." bug)' />

            <TextView
                android:id="@+id/actTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="13dp"
                android:text="GUI Updates"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/actTitle"
                android:text="•Added Info Activity (displays all informatioon about Application) \n•Added View User button in menu that shows current users in chat room" />
            android:text="TextView" />
            android:text="TextView" />
        </RelativeLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
