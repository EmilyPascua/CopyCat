<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.nkzawa.socketio.androidchat.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_gravity="center_horizontal"
            android:padding="6dip">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:src="@drawable/ff"
                android:layout_marginEnd="157dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/mainHeader" />

            <TextView
                android:id="@+id/mainHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="55dp"
                android:text="COPYCAT"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <EditText
            android:id="@+id/username_input"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.69"
            android:hint="@string/prompt_username"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPersonName"
            android:maxLength="14"
            android:maxLines="1"
            android:singleLine="true" />

        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:id ="@+id/textoflanguage"
            android:paddingTop="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/languages"
            android:id ="@+id/language_spinner"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"

            >

          </Spinner>

        <CheckBox
            android:id="@+id/age_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:duplicateParentState="true"
            android:focusableInTouchMode="true"
            android:onClick="confirmAge"
            android:text="@string/age_requirement"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:elevation="0dp"
            android:text="@string/action_sign_in"
            android:textStyle="bold"
            android:background="@color/grey1"
            />

    </LinearLayout>
</ScrollView>